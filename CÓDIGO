#include <ESP8266WiFi.h>
#include <PubSubClient.h>

// Configurações Wi-Fi
const char* ssid = "GREGORIO";
const char* password = "123456";

// Configurações MQTT
const char* mqtt_server = "broker.mqtt-dashboard.com";
const char* mqtt_topic = "agricultura/umidade";

WiFiClient espClient;
PubSubClient client(espClient);

// Pinos
const int sensorPin = A0;
const int valvePin = 8;

void setup() {
  Serial.begin(9600);
  pinMode(valvePin, OUTPUT);
  
  // Conecta Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("Wi-Fi conectado!");

  // Configura MQTT
  client.setServer(mqtt_server, 1883);
}

void reconnect() {
  while (!client.connected()) {
    if (client.connect("arduinoClient")) {
      Serial.println("Conectado ao broker MQTT!");
    } else {
      Serial.print("Falha, rc=");
      Serial.print(client.state());
      delay(5000);
    }
  }
}

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  // Lê sensor e controla válvula
  int soilMoisture = analogRead(sensorPin);
  if (soilMoisture < 500) {
    digitalWrite(valvePin, HIGH);  // Liga válvula (solo seco)
  } else {
    digitalWrite(valvePin, LOW);   // Desliga válvula (solo úmido)
  }

  // Publica no MQTT
  client.publish(mqtt_topic, String(soilMoisture).c_str());
  delay(60000);  // Publica a cada 1 minuto
}
